@model IEnumerable<Projectoree.Models.LISTING>

<div class="row">
    @if (Model != null)
    {
        foreach (var listing in Model)
        {

            <div class="col-lg-4">
                <h2>
                    @if (listing.title.Length > 32)
                    {
                        listing.title = listing.title.Substring(0, 32) + "...";
                    }
                    @Html.DisplayFor(modelItem => listing.title)
                </h2>
                <h3 class="text-muted">@Html.DisplayFor(modelItem => listing.discipline)</h3>
                <p>
                    @if (listing.description.Length > 400)
                    {
                        listing.description = listing.description.Substring(0, 400) + "...";
                    }
                    @Html.DisplayFor(modelItem => listing.description)
                </p>
                <p>@Html.ActionLink("Details", "Details", "Listings", new { id = listing.projectid }, new { @class = "btn btn-default" })</p>
            </div>
        }
    }
</div><!-- /.row -->
<!-- /END THE FEATURETTES -->