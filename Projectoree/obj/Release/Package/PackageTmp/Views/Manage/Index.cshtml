@model Projectoree.Models.IndexViewModel

@{
    ViewBag.Title = "Manage";
    var userid = Model.userid;
}
<div class="row featurette">
    <div class="col-md-7">
        <h2 class="featurette-heading">@Model.firstname's Profile</h2>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <hr />
    <p class="text-success">@TempData["errorMessage"]</p>
}
else if (ViewBag.StatusMessage != "")
{
    <hr />
    <p class="text-success">@ViewBag.StatusMessage</p>
}

@if (TempData["errorMessage"] != null)
{
    <hr />
    <p class="text-success">@TempData["errorMessage"]</p>
}

<hr />

<div class="row">
    <div class="col-lg-4 float-left text-left">
        <h2 class="text-left">Name <span class="text-muted">@Model.firstname @Model.lastname</span></h2>
        <h3 class="text-left">Discipline <span class="text-muted">@Model.discipline</span></h3>
        <h3 class="text-left">Email <span class="text-muted">@Model.email</span></h3>
        <h3 class="text-left">Contact Number <span class="text-muted">@Model.contactnumber</span></h3>
        <h3 class="text-left">Units <span class="text-muted">@Model.units</span></h3>
        <h3 class="text-left">Skills <span class="text-muted">@Model.skills</span></h3>
    </div>
    <div class="col-lg-6">

        <h2>BIO</h2>
        <p>@Model.bio</p>
        <h2>Interests</h2>
        <p>@Model.interests</p>

    </div>
</div>
<div>
    [
    @if (Model.HasPassword)
    {
        @Html.ActionLink("Change your password", "ChangePassword")
    }
    else
    {
        @Html.ActionLink("Create", "SetPassword")
    }
    |

    @if (Model.userid != null)
    {
                @Html.ActionLink("Update Account Details", "Edit", new { id = @userid + "/" })
                @:|
                @Html.ActionLink("Delete", "Delete", "Profiles")
                @:]
    }
</div>
    </dl>
</div>
